<script>

function show(str) {

  var xhttp;
 
  xhttp = new XMLHttpRequest();
  xhttp.onreadystatechange = function() {
    if (xhttp.readyState == 4 && xhttp.status == 200) {
      myFunction(xhttp.responseText);
    }
  };
  xhttp.open("GET", "http://www.omdbapi.com/?i="+str, true);
  xhttp.send();
    function myFunction(response) {
    var arr = JSON.parse(response);
    
    document.getElementById("th1").innerHTML = "Description";
        document.getElementById("th2").innerHTML = "Movie";
        
        document.getElementById("td1").innerHTML = "Title";
        
        document.getElementById("td3").innerHTML = "Rated";
        document.getElementById("td4").innerHTML = "Genre";
        document.getElementById("td5").innerHTML = "Runtime";
        document.getElementById("td6").innerHTML = "Director";
        
        document.getElementById("td8").innerHTML = "Actors";
        document.getElementById("td9").innerHTML = "Plot";
        
        document.getElementById("td12").innerHTML = "Language";
       
        document.getElementById("td14").innerHTML = "imdbRating";
       
        
    document.getElementById("t1").innerHTML = arr.Title;
       
        document.getElementById("t3").innerHTML = arr.Rated;
        document.getElementById("t4").innerHTML = arr.Genre;
        document.getElementById("t5").innerHTML = arr.Runtime;
        document.getElementById("t6").innerHTML = arr.Director;
        
        document.getElementById("t8").innerHTML = arr.Actors;
        document.getElementById("t9").innerHTML = arr.Plot;
       
        document.getElementById("t12").innerHTML = arr.Language;
        
        document.getElementById("t14").innerHTML = arr.imdbRating;
        
        
        document.getElementById("myImg").src = arr.Poster;
        
}
}
</script>
